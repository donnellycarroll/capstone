<div id="<%= dom_id event %>">
  <p>
    <strong>Title:</strong>
    <%= event.title %>
  </p>

  <p>
    <strong>Image:</strong>
    <%= event.image %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= event.location %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= event.description %>
  </p>

  <p>
    <strong>Host:</strong>
    <%= event.host_id %>
  </p>

  <p>
    <strong>Start time:</strong>
    <%= event.start_time %>
  </p>

  <p>
    <strong>End time:</strong>
    <%= event.end_time %>
  </p>

  <p>
    <strong>Rsvp cap:</strong>
    <%= event.rsvp_cap %>
  </p>

  <p>
    <strong>Guests count:</strong>
    <%= event.guests_count %>
  </p>

  <p>
    <strong>Comments count:</strong>
    <%= event.comments_count %>
  </p>

</div>
